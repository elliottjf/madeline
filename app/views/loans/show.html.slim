= render 'common/show_header'

b Details
|  - Criteria - Timeline - Calendar - Print - More
br
br

table
  tr
    td Division
    td = @item.division.try(:name)
  tr
    td Organization
    td
      - if @item.organization
        = link_to @item.organization.name, organization_path(@item.organization)
  tr
    td Loan Type
    td = @item.loan_type
  tr
    td Status
    td = @item.status
  tr
    td Amount:
    td = @item.amount
  tr
    td Summary
    td
      - for t in @item.summary_list
        = t[:code]
        ':
        => t[:text]
        br
  tr
    td Point Person
    td
      - if @item.primary_agent
        = link_to @item.primary_agent.display_name, person_path(@item.primary_agent)
  tr
    td Second
    td
      - if @item.secondary_agent
        = link_to @item.secondary_agent.display_name, person_path(@item.secondary_agent)
  tr
    td Length (months)
    td = @item.length_months
  tr
    td Rate
    td = @item.rate
  tr
    td Signing Date
    td = @item.signing_date
  tr
    td First Payment Date
    td = @item.first_payment_date
  tr
    td First Interest Payment Date
    td = @item.first_interest_payment_date
  tr
    td Target End Date
    td = @item.target_end_date
  tr
    td Projected Return
    td = @item.projected_return
  tr
    td Representative
    td
      - if @item.representative
        = link_to @item.representative.display_name, person_path(@item.representative)
  tr
    td Details
    td
      - for t in @item.details_list
        = "#{t[:code]}: #{t[:text]}"
        br
  tr
    td Organization Size
    td = @item.organization_size
  tr
    td Created At
    td = @item.created_at
  tr
    td Updated At
    td = @item.updated_at

