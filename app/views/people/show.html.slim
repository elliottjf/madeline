= render 'common/show_header'

table
  tr
    td First Name
    td = @item.first_name
  tr
    td Last Name
    td = @item.last_name
  tr
    td Organization
    td
      - if @item.primary_organization
        = link_to @item.primary_organization.display_name, organization_path(@item.primary_organization)
  tr
    td Phone
    td = @item.primary_phone
  tr
    td Mobile
    td = @item.secondary_phone
  tr
    td Email
    td = @item.email
  tr
    td Created At
    td = @item.created_at
  tr
    td Updated At
    td = @item.updated_at

/hr
/= debug @item